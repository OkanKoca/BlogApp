@model User

<div class="row">
	<div class="col-md-2">
		<div class="bg-white p-2">
			<img src="/img/@Model.Image" class="img-fluid"/>
		</div>	
	</div>
	<div class="col-md-10">
		<div class="bg-white p-4">
			<h5>@Model.UserName</h5>
			<hr />
			<div id="posts">
				<h5 class="my-4">Published Posts</h5>
				<ul class="list-group">
					@foreach(var post in Model.Posts)
					{
						<li class="list-group-item">
							<a asp-controller="Posts" asp-action="Details" asp-route-url="@post.Url">
								 @post.Title
							</a>
						</li>
					}
				</ul>
			</div>
			<div id="comments">
				<h5 class="my-4">Comments</h5>
				<ul class="list-group">
					@foreach (var comment in Model.Comments)
					{
						<li class="list-group-item">@comment.Text
							<i><a asp-controller="Posts" asp-action="Details" asp-route-url="@comment.Post.Url">[@comment.Post.Title]</a></i>
						</li>
					}
				</ul>
			</div> 
		</div>
	</div>
</div>